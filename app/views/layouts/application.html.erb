<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "EmbedTree" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "EmbedTree" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
    <script type='text/javascript'>
      var googletag = googletag || {};
      googletag.cmd = googletag.cmd || [];
      (function() {
      var gads = document.createElement('script');
      gads.async = true;
      gads.type = 'text/javascript';
      var useSSL = 'https:' == document.location.protocol;
      gads.src = (useSSL ? 'https:' : 'http:') +
      '//www.googletagservices.com/tag/js/gpt.js';
      var node = document.getElementsByTagName('script')[0];
      node.parentNode.insertBefore(gads, node);
      })();
      </script>
       
      <script type='text/javascript'>
      googletag.cmd.push(function() {
      googletag.defineSlot('/10854922/leaderboard', [728, 90], 'div-gpt-ad-1382281280365-0').addService(googletag.pubads());
      googletag.pubads().enableSingleRequest();
      googletag.enableServices();
      });
    </script>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <div class="navbar navbar-fixed-top navbar-inverse">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </div>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span10 offset1">
              <%= render 'layouts/messages' %>
              <!-- leaderboard -->
              <div id='div-gpt-ad-1382281280365-0' style='width:728px; height:90px;'>
              <script type='text/javascript'>
              googletag.cmd.push(function() { googletag.display('div-gpt-ad-1382281280365-0'); });
              </script>
              </div>
              <%= yield %>
            </div>
          </div>

        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
    <footer>
            <section class="text-center">
              <p>EmbedTree &copy;</p>
            </section>
    </footer>
  </body>
</html>
